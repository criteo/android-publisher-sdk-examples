<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".RewardedActivity">


  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20sp"
    android:layout_marginLeft="14.5sp"
    android:layout_marginRight="14.5sp"
    app:layout_constraintTop_toTopOf="parent"
    android:orientation="vertical">

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textSize="20dp"
      android:textColor="@color/colorPrimary"
      android:text="Enrich" />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="5sp"
      android:text="Criteo SDK enriches your Ad Manager request with bid information" />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:textSize="20dp"
      android:textColor="@color/colorPrimary"
      android:text="Compete" />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="5sp"
      android:text="Criteo line item competes with all other available demand in Ad Manager" />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:textSize="20dp"
      android:textColor="@color/colorPrimary"
      android:text="Display" />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="5sp"
      android:text="Ad Manager displays Criteo ad when Criteo wins the competition" />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:textSize="11sp"
      android:text="* You will need to setup Criteo line items and use your Ad Manager's Ad Unit ID in the sample code in order to see Criteo ad"/>

    <Button
      android:id="@+id/displayRewardedButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="50dp"
      android:text="Loading Rewarded Ads"
      android:layout_gravity="center"
      android:enabled="false" />

  </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>