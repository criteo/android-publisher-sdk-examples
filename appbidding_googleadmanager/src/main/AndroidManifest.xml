<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.criteo.publisher.samples.appbidding_googleadmanager">

  <application
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:name=".CriteoSampleApplication"
    android:networkSecurityConfig="@xml/network_security_config"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">

    <activity
      android:label="CriteoSample - Google Ad Manager"
      android:name=".MainActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <activity
      android:label="Interstitial Video Sample - Google Ad Manager"
      android:name=".InterstitialActivity"
      android:parentActivityName=".MainActivity" />
    <activity
      android:label="Rewarded Video Sample - Google Ad Manager"
      android:name=".RewardedActivity"
      android:parentActivityName=".MainActivity" />
    <activity
      android:label="Rewarded Interstitial Video Sample - Google Ad Manager"
      android:name=".RewardedInterstitialActivity"
      android:parentActivityName=".MainActivity" ></activity>

    <meta-data
      android:name="com.google.android.gms.ads.AD_MANAGER_APP"
      android:value="true" />
  </application>

</manifest>